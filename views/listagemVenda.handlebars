<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Chamar os arquivos externos -->
    <link rel="stylesheet" type="text/css" href="css/listagem_venda.css">

</head>

<header>
    <h1>LISTA: VENDAS</h1>    
    <div>
        <a href="/" type="submit" id="botao-inicial"><button class="botao-inicial">Tela inicial</button></a>
        <a href="/cadastroVenda" type="submit" id="cadastroProduto"><button class="botao-cadastrar-produto">Cadastro de Venda</button></a>
    </div> 
</header>

    <table class="topo-tabela">
         <thead>
            <tr class="topo-linha">
                <th>Data da Venda</th>
                <th>Produto</th>
                <th>Valor da venda (Bruto) </th>
                <th>Quantidade</th>             
                <th>Total de Pagamento</th>
                <th>Forma de Pagamento</th>
            </tr>
        </thead>   
        <tbody>
            {{#each posts}}
                <tr>
                    <td>{{data_venda}}</td>
                    <td>{{#if tbl_produto}}{{tbl_produto.descricao_produto}}{{else}}Produto n√£o encontrado{{/if}}</td>
                    <td>{{tbl_produto.valor_bruto_venda_produto}}</td>
                    <td>{{quantidade_venda_produto}}</td>
                    <td>{{total_pago_venda}}</td>
                    <td>{{forma_pag_venda}}</td>
                    <td><a href="/deletarVenda/{{pk_venda}}" id="excluir"><button class="botao-excluir"><i class="fa-solid fa-trash-can"></i></button></a></td>
                </tr>
            {{/each}}            
        </tbody>
    </table>
    
    
<script src="https://kit.fontawesome.com/efb8d7431f.js" crossorigin="anonymous"></script>